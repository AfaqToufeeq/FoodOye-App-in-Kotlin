<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:elevation="@dimen/_15sdp"
    app:cardElevation="@dimen/_15sdp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        app:cardCornerRadius="9dp"
        android:elevation="16dp"
        app:cardElevation="16dp"
        android:id="@+id/cartOrderDetails"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/lightOrange"
                    android:text="Order Number"
                    android:textSize="14sp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/orderNumberTV"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:layout_width="0dp"
                    android:textColor="@color/lightOrange"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nill"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">
                <TextView
                    android:id="@+id/dateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/DarkBlue"
                    android:text="Date"
                    android:textSize="14sp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/timeTV"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:layout_width="0dp"
                    android:textColor="@color/DarkBlue"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textColor="@color/lightOrange"
                    android:text="Customer's Name"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/customerNameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="9dp"
                    android:text="Customer's Name"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textColor="@color/lightOrange"
                    android:text="Customer's Phone No."
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/customerPhoneTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="9dp"
                    android:text="Customer's Phone No."
                    android:textSize="14sp"
                    android:textStyle="italic"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="2.5dp"
                    android:textColor="@color/lightOrange"
                    android:text="Customer's Address :"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/customerAddressTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_marginTop="3dp"
                    android:padding="2.5dp"
                    android:text="Customer's Address"
                    android:textSize="14sp"
                    android:textStyle="italic"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_weight="18">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="1dp"
                    android:textColor="@color/lightOrange"
                    android:clickable="false"
                    android:text="Food Name "
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:textColor="@color/lightOrange"
                    android:text="Quantity"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">


                <TextView
                    android:id="@+id/foodNameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text="Food Name "
                    android:textSize="14sp"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/quantityTVV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quantity"
                    android:textSize="14sp"
                    android:textStyle="italic" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/DarkBlue"
                    android:text="Total Bill"
                    android:textSize="14sp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/TotalBillTV"
                    android:layout_width="0dp"
                    android:textColor="@color/DarkBlue"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:layout_weight="1"
                    android:text="0 Rs"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:textColor="@color/lightOrange"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="Customer's Comments :"
                    android:textSize="14sp"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/customerCommentsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:layout_marginTop="3dp"
                    android:text="Customer's Comments"
                    android:textSize="14sp"
                    android:textStyle="italic"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="18">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/lightOrange"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textStyle="italic" />
                <TextView
                    android:id="@+id/statusTV"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:textColor="@color/lightOrange"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Waiting for Response"
                    android:textSize="14sp"
                    android:textStyle="italic"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>